<main>
<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <%= render 'books/userinfo', user: @user %>
      <%= render 'books/newbook', book: @new %>
    </div>

    <div class='col-md-8 offset-md-1'>
      <h2>Book detail</h2>
      <table class='table'>
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tr>
          <td><%= link_to user_path(@user.id) do %><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></br>
            <%= @book.title %><% end %></td>
          <td><%= link_to book_path(@book.id) do %><%= @book.title %><% end %></td>
          <td><%= @book.body %></td>
          <% if @book.user == current_user %>
            <td><%= link_to "Edit", edit_book_path(@book.id), class:"btn btn-sm btn-success", data: {"turbolinks" => false} %> </td>
            <td><%= link_to "Destroy", book_path(@book.id), class:"btn btn-sm btn-danger", method: :delete, "data-confirm" => "本当に消しますか？" %></td>
          <% end %>
        </tr>
      </table>
    </div>
  </div>
</div>
</main>