<main>
  <p id="notice"></p>
  <div class='container'>
    <div class='row'>
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>User info</h2>
        <div class="text-danger">
          <% if @user.errors.any? %>
          <div class="h3">
            <%= @user.errors.count %>error prohibited this obj from being saved:
          </div>
            <ul><% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %></ul>
          <% end %>
        </div>


        <%= form_with model:@user, local:true do |f| %>
          <div class="form-group">
            <label for="user_name">Name</label>
            <%= f.text_field :name, class:"form-control name" %>
          </div>
          <div class="form-group">
            <label for="user_image">Image</label>
            <%= f.attachment_field :profile_image, placeholder: "ファイルの選択" %>
          </div>
          <div class="form-group">
            <label for="user_introduction">Introduction</label>
            <%= f.text_area :introduction, class:"form-control  introduction", rows:"3" %>
          </div>
          <div class="form-group">
            <%= f.submit 'Update User', class:"btn btn-secondary" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</main>